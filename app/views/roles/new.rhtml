<h2>New host for <%= link_to h(current_project.name), project_path(current_project) %>/<%= link_to h(current_stage.name), project_stage_path(current_project, current_stage) %></h2>

<%= error_messages_for :role %>

<% form_tag(project_stage_roles_path(current_project, current_stage), :method => :post) do %>
  
  <%= render(:partial => 'form')%>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', project_stage_path(current_project, current_stage) %>