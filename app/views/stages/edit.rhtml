<h2>Editing stage</h2>

<%= error_messages_for :stage %>

<% form_for(:stage, :url => project_stage_path(@project, @stage), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <b>Alert these emails on deploy (separated by space)</b><br />
    <%= f.text_field :alert_emails %>
  </p>
  
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Back', project_stage_path(@project, @stage) %>